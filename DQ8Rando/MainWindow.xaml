                    <Label Content="Locks" HorizontalAlignment="Left" Height="26" Margin="10,306,0,0" VerticalAlignment="Top" Width="40" Grid.ColumnSpan="2"/>
                    <Separator HorizontalAlignment="Left" Height="21" Margin="27,311,0,0" VerticalAlignment="Top" Width="301" Grid.Column="1" Grid.ColumnSpan="2"/>
                    <Label Content="Percentage of chests to lock" HorizontalAlignment="Left" Height="26" Margin="10,367,0,0" VerticalAlignment="Top" Width="183" Grid.ColumnSpan="3"/>
