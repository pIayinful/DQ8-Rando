        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DQ8Rando"
        xmlns:wpfTool="clr-namespace:Xceed.Wpf.Toolkit;assembly=Xceed.Wpf.Toolkit"
        mc:Ignorable="d"
        Title="Dragon Quest VIII Randomizer v0.1" Height="598" Width="408" ResizeMode="CanMinimize" x:Class="DQ8Rando.MainWindow">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>


        <TabControl Name="tabCtrl_main" HorizontalAlignment="Left" Height="487" Margin="10,10,0,0" VerticalAlignment="Top" Width="372">
            <TabItem Header="Monsters" Name ="tab_monsters">
                <Grid Background="#FFFFFFFF">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="15*"/>
                        <ColumnDefinition Width="46*"/>
                    </Grid.ColumnDefinitions>
                    <CheckBox x:Name="check_monsters_enemyOverworld" Content="Randomize Enemies on the Overworld" ToolTip="Randomize monsters that spawn in overworld areas (fields, dungeons, etc.)" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Grid.ColumnSpan="2" Click="monsters_mixInInfamous_EnableCheck"/>
                    <CheckBox x:Name="check_monsters_mixInInfamous"  Content="Mix In Infamous Monsters"           ToolTip="Allow Infamous Monsters to spawn alongside regular monsters. (They cannot be recruited this way)" HorizontalAlignment="Left" Margin="10,30,0,0" VerticalAlignment="Top" Grid.ColumnSpan="2" IsEnabled="False"/>
                    <CheckBox x:Name="check_monsters_enemySpecial"   Content="Randomize Special Monsters"         ToolTip="Randomize &quot;Special&quot; Family monsters, which are required for certain photo quests." HorizontalAlignment="Left" Margin="10,50,0,0" VerticalAlignment="Top" Grid.ColumnSpan="2"/>
                    <CheckBox x:Name="check_monsters_enemyBoss"      Content="Randomize Scripted Encounters"      ToolTip="Randomize bosses and other scripted encounters." HorizontalAlignment="Left" Margin="10,70,0,0" VerticalAlignment="Top" Grid.ColumnSpan="2" />
                </Grid>
            </TabItem>
            <TabItem Header="Treasure" Name="tab_treasure">
                <Grid Background="#FFFFFFFF">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="14*"/>
                        <ColumnDefinition Width="54*"/>
                        <ColumnDefinition Width="115*"/>
                    </Grid.ColumnDefinitions>
                    <CheckBox x:Name="check_treasure_tbRandom"     Content="Randomize treasure drops"      ToolTip="Randomize the treasure obtained from chests, barrels, etc." HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Grid.ColumnSpan="3" Click="treasure_goldPercent_EnableCheck"/>
                    <CheckBox x:Name="check_treasure_forceFill"    Content="Force chests to be filled"     ToolTip="Make sure that no chest is left empty. Does not affect barrels, pots, etc." HorizontalAlignment="Left" Margin="10,165,0,0" VerticalAlignment="Top" Grid.ColumnSpan="3"/>
                    <CheckBox x:Name="check_treasure_blueShuffle"  Content="Shuffle blue chests"           ToolTip="Randomly assign loot pools to each blue and purple chest." HorizontalAlignment="Left" Margin="10,185,0,0" VerticalAlignment="Top" Grid.ColumnSpan="2"/>
                    <CheckBox x:Name="check_treasure_blueRandom"   Content="Randomize blue chest pools"    ToolTip="Randomize items within blue and purple chest pools." HorizontalAlignment="Left" Margin="10,205,0,0" VerticalAlignment="Top" Grid.ColumnSpan="3"  Click="treasure_goldPercent_EnableCheck"/>
                    <CheckBox x:Name="check_treasure_swapBlueRed"  Content="Swap blue and red chests"      ToolTip="Randomly turn some red chests blue, and vice versa." HorizontalAlignment="Left" Margin="10,225,0,0" VerticalAlignment="Top" Grid.ColumnSpan="3" Click="treasure_goldPercent_EnableCheck"/>
                    <wpfTool:DoubleUpDown Name="tbox_treasure_goldPercentMin"  Value="25"   Maximum="100" Minimum="0"   ToolTip="Minimum percentage of loot objects to contain gold." HorizontalAlignment="Left" Height="20" Margin="10,71,0,0" VerticalAlignment="Top" Width="62" Grid.ColumnSpan="2" IsEnabled="False" ValueChanged="tbox_treasure_goldPercent_ValueChanged"/>
                    <wpfTool:DoubleUpDown Name="tbox_treasure_goldPercentMax"  Value="50"   Maximum="100" Minimum="0"   ToolTip="Maximum percentage of loot objects to contain gold." HorizontalAlignment="Left" Height="20" Margin="64,71,0,0" VerticalAlignment="Top" Width="62" Grid.Column="1" IsEnabled="False"     ValueChanged="tbox_treasure_goldPercent_ValueChanged" Grid.ColumnSpan="2"/>
                    <wpfTool:ShortUpDown Name="tbox_treasure_goldAmountMin"    Value="1"    Maximum="32767" Minimum="1" ToolTip="Minimum amount of gold contained within a single object." HorizontalAlignment="Left" Height="20" Margin="44,71,0,0"  VerticalAlignment="Top" Width="62" IsEnabled="False" Grid.Column="2" ValueChanged="tbox_treasure_goldAmount_ValueChanged"/>
                    <wpfTool:ShortUpDown Name="tbox_treasure_goldAmountMax"    Value="2500" Maximum="32767" Minimum="1" ToolTip="Maximum amount of gold contained within a single object." HorizontalAlignment="Left" Height="20" Margin="126,71,0,0"  VerticalAlignment="Top" Width="62" Grid.Column="2" IsEnabled="False" ValueChanged="tbox_treasure_goldAmount_ValueChanged"/>
                    <wpfTool:DoubleUpDown Name="tbox_treasure_emptyPercentMin" Value="20"   Maximum="100" Minimum="0"   ToolTip="Minimum percentage of loot objects to contain nothing." HorizontalAlignment="Left" Height="20" Margin="10,137,0,0"  VerticalAlignment="Top" Width="62" Grid.ColumnSpan="2" IsEnabled="False" ValueChanged="tbox_treasure_emptyPercent_ValueChanged"/>
                    <wpfTool:DoubleUpDown Name="tbox_treasure_emptyPercentMax" Value="30"   Maximum="100" Minimum="0"   ToolTip="Maximum percentage of loot objects to contain nothing." HorizontalAlignment="Left" Height="20" Margin="64,137,0,0"  VerticalAlignment="Top" Width="62" Grid.Column="1" IsEnabled="False" ValueChanged="tbox_treasure_emptyPercent_ValueChanged" Grid.ColumnSpan="2"/>
                    <wpfTool:DoubleUpDown Name="tbox_treasure_trapPercentMin"  Value="5"    Maximum="100" Minimum="0"   ToolTip="Minimum percentage of chests that are monsters in disguise." HorizontalAlignment="Left" Height="20" Margin="44,137,0,0"  VerticalAlignment="Top" Width="62" IsEnabled="False" Grid.Column="2" ValueChanged="tbox_treasure_trapPercent_ValueChanged"/>
                    <wpfTool:DoubleUpDown Name="tbox_treasure_trapPercentMax"  Value="10"   Maximum="100" Minimum="0"   ToolTip="Maximum percentage of chests that are monsters in disguise." HorizontalAlignment="Left" Height="20" Margin="126,137,0,0"  VerticalAlignment="Top" Width="62" Grid.Column="2" IsEnabled="False" ValueChanged="tbox_treasure_trapPercent_ValueChanged"/>
                    <wpfTool:DoubleUpDown Name="tbox_treasure_bluePercentMin"  Value="10"   Maximum="100" Minimum="0"   ToolTip="Minimum percentage of blue/purple chests." HorizontalAlignment="Left" Height="20" Margin="10,286,0,0"  VerticalAlignment="Top" Width="62" Grid.ColumnSpan="2" IsEnabled="False" ValueChanged="tbox_treasure_bluePercent_ValueChanged" />
                    <wpfTool:DoubleUpDown Name="tbox_treasure_bluePercentMax"  Value="15"   Maximum="100" Minimum="0"   ToolTip="Maximum percentage of blue/purple chests." HorizontalAlignment="Left" Height="20" Margin="64,286,0,0"  VerticalAlignment="Top" Width="62" Grid.Column="1" IsEnabled="False" ValueChanged="tbox_treasure_bluePercent_ValueChanged" Grid.ColumnSpan="2"/>
