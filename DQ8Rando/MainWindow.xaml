                    <Label Content="%" HorizontalAlignment="Left" Height="26" Margin="18,283,0,0" VerticalAlignment="Top" Width="26" Grid.Column="2"/>
                    <Label Content="%" HorizontalAlignment="Left" Height="26" Margin="44,283,0,0" VerticalAlignment="Top" Width="20" Grid.Column="1"/>
                </Grid>
            </TabItem>
            <TabItem Header="Shopping" Name="tab_shop" >
                <Grid>
                    <GroupBox Header="Shop inventory" HorizontalAlignment="Left" Height="78" Margin="10,10,0,0" VerticalAlignment="Top" Width="346">
                        <Grid>
                            <RadioButton Name="radio_shop_noChange"    Content="No change"            ToolTip="Make no changes to shop lineups." HorizontalAlignment="Left" Width="109" Margin="10,10,0,0" Height="15" VerticalAlignment="Top" IsChecked="True"/>
                            <RadioButton Name="radio_shop_shuffleShop" Content="Shuffle shops"        ToolTip="Shuffle shop inventories between shops." VerticalAlignment="Top" Margin="167,10,58,0"/>
                            <RadioButton Name="radio_shop_shuffleItem" Content="Shuffle shop items"   ToolTip="Shuffle items between shops." VerticalAlignment="Top" Margin="10,30,195,0"/>
                            <RadioButton Name="radio_shop_randomItem"  Content="Randomize shop items" ToolTip="Randomize all items sold in shops." Margin="167,30,16,0" Height="15" VerticalAlignment="Top"/>
                        </Grid>
                    </GroupBox>
                    <CheckBox x:Name="check_shop_itemPrice" Content="Randomize prices by item" ToolTip="Randomize the price of all items." HorizontalAlignment="Left" Margin="10,98,0,0" VerticalAlignment="Top" Click="shop_itemPrice_EnableCheck"/>
                    <CheckBox x:Name="check_shop_shopPrice" Content="Randomize prices by shop" ToolTip="Randomize the sale/markup percentage each shop sells items at." Margin="183,98,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Click="shop_shopPrice_EnableCheck"/>
                    <wpfTool:LongUpDown x:Name="tbox_shop_itemPriceMin" Value="1"      Maximum="9999999" Minimum="1" ToolTip="Minimum price for any item." HorizontalAlignment="Left" Height="20" Margin="10,159,0,0" VerticalAlignment="Top" Width="62" IsEnabled="False" ValueChanged="shop_itemPrice_ValueChanged"/>
                    <wpfTool:LongUpDown x:Name="tbox_shop_itemPriceMax" Value="500000" Maximum="9999999" Minimum="1" ToolTip="Maximum price for any item." HorizontalAlignment="Left" Height="20" Margin="92,159,0,0" VerticalAlignment="Top" Width="62" IsEnabled="False" ValueChanged="shop_itemPrice_ValueChanged"/>
                    <wpfTool:LongUpDown x:Name="tbox_shop_shopPriceMin" Value="50"     Maximum="20000"   Minimum="1" ToolTip="Minimum percentage of sale price for any shop." HorizontalAlignment="Left" Height="20" Margin="183,159,0,0" VerticalAlignment="Top" Width="62" IsEnabled="False" ValueChanged="shop_shopPrice_ValueChanged"/>
                    <wpfTool:LongUpDown x:Name="tbox_shop_shopPriceMax" Value="300"    Maximum="20000"   Minimum="1" ToolTip="Maximum percentage of sale price for any shop." HorizontalAlignment="Left" Height="20" Margin="265,159,0,0" VerticalAlignment="Top" Width="62" IsEnabled="False" ValueChanged="shop_shopPrice_ValueChanged"/>
                    <!-- Casino -->
                    <GroupBox Header="Casino prizes" HorizontalAlignment="Left" Height="58" Margin="10,205,0,0" VerticalAlignment="Top" Width="346">
                        <Grid>
                            <RadioButton x:Name="radio_shop_casino_noChange"    Content="No change" HorizontalAlignment="Left" Width="85" Margin="10,10,0,10" IsChecked="True"/>
                            <RadioButton x:Name="radio_shop_casino_shufflePrize" Content="Shuffle prizes" Margin="100,10,134,0" Height="15" VerticalAlignment="Top"/>
                            <RadioButton x:Name="radio_shop_casino_randomPrize" Content="Randomize prizes" Margin="205,10,10,0" Height="15" VerticalAlignment="Top"/>
                        </Grid>
                    </GroupBox>
                    <CheckBox x:Name="check_shop_casino_Price"  Content="Randomize prize costs" ToolTip="Randomize monsters that spawn in overworld areas (fields, dungeons, etc.)" HorizontalAlignment="Left" Margin="10,274,0,0" VerticalAlignment="Top" Click="shop_casino_price_EnableCheck"/>
                    <wpfTool:LongUpDown x:Name="tbox_shop_casino_price_min"  Value="300"       Maximum="2147483647" Minimum="1"   ToolTip="Minimum amount of gold that inns may charge." HorizontalAlignment="Left" Height="20" Margin="186,314,0,0" VerticalAlignment="Top" Width="77" IsEnabled="False" ValueChanged="shop_casino_Price_ValueChanged"/>
                    <wpfTool:LongUpDown x:Name="tbox_shop_casino_price_max"  Value="1000000"   Maximum="2147483647" Minimum="1"   ToolTip="Maximum amount of gold that inns may charge." HorizontalAlignment="Left" Height="20" Margin="268,314,0,0" VerticalAlignment="Top" Width="77" IsEnabled="False" ValueChanged="shop_casino_Price_ValueChanged"/>
                    <!-- Inns -->
