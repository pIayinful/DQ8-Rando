                    <CheckBox x:Name="check_treasure_locks_keyLocation"    Content="Randomize Magic Key location" ToolTip="Shuffle the Magic Key into a random loot object. (Guaranteed to be accessible)" HorizontalAlignment="Left" Margin="10,437,0,0" VerticalAlignment="Top" Grid.ColumnSpan="3"/>
                    <wpfTool:DoubleUpDown Name="tbox_treasure_locks_min" Value="35" ToolTip="Minimum percentage of chests to lock." Minimum="0" Maximum="100"         HorizontalAlignment="Left" Height="20" Margin="10,412,0,0" VerticalAlignment="Top" Width="62" IsEnabled="False" Grid.ColumnSpan="2" ValueChanged="tbox_treasure_lockPercent_ValueChanged"/>
                    <wpfTool:DoubleUpDown Name="tbox_treasure_locks_max" Value="45" ToolTip="Maximum percentage of chests to lock." Minimum="0" Maximum="100"         HorizontalAlignment="Left" Height="20" Margin="64,412,0,0" VerticalAlignment="Top" Width="62" IsEnabled="False" Grid.Column="1" ValueChanged="tbox_treasure_lockPercent_ValueChanged" Grid.ColumnSpan="2"/>
