                    <wpfTool:ShortUpDown x:Name="tbox_shop_hotelChargesMin"  Value="1"    Maximum="5461" Minimum="0"   ToolTip="Minimum amount of gold that inns may charge." HorizontalAlignment="Left" Height="20" Margin="186,405,0,0" VerticalAlignment="Top" Width="62" IsEnabled="False" ValueChanged="shop_hotelCharges_ValueChanged"/>
                    <wpfTool:ShortUpDown x:Name="tbox_shop_hotelChargesMax"  Value="50"   Maximum="5461" Minimum="0"   ToolTip="Maximum amount of gold that inns may charge." HorizontalAlignment="Left" Height="20" Margin="268,405,0,0" VerticalAlignment="Top" Width="62" IsEnabled="False" ValueChanged="shop_hotelCharges_ValueChanged"/>

