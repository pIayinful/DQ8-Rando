                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0">
                                <Label Content="Alchemy Recipes"/>
                                <ComboBox>
                                    <ComboBoxItem Content="No change"             IsSelected="{Binding Alchemy.NoChange}"/>
                                    <ComboBoxItem Content="Shuffle recipes"       IsSelected="{Binding Alchemy.Shuffle}"/>
                                    <ComboBoxItem Content="Randomize results"     IsSelected="{Binding Alchemy.ResultRandom}"/>
                                    <ComboBoxItem Content="Randomize ingredients" IsSelected="{Binding Alchemy.IngredientRandom}"/>
                                    <ComboBoxItem Content="Randomize all"         IsSelected="{Binding Alchemy.AllRandom}"/>
                                </ComboBox>
                                <CheckBox Content="Shuffle bookshelves" IsChecked="{Binding Alchemy.BookShuffle}"/>
                            </StackPanel>
                        </Grid>
                    </TabItem>
